<!DOCTYPE html>
<html>
  <head>
    <%- include('./head'); %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./sidebar'); %></div>

        <div class="col-sm-10">
          <h1><%= title %></h1>
          <ul>
            <% if (book_list.length !== 0) { %> <% for (let i = 0; i <
            book_list.length; i++) {%>
            <li>
              <a href="<%= book_list[i].url %>"><%= book_list[i].title %></a>
              <span>(<%= book_list[i].author.name %>)</span>
            </li>

            <%} %> <%} else { %>
            <li>There are no books.</li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
