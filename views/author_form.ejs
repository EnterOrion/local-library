<!DOCTYPE html>
<html>
  <head>
    <%- include('./head'); %>
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-2"><%- include('./sidebar'); %></div>
        <div class="col-sm-10">
          <h1><%= title %></h1>
          <form method="post" action="">
            <div class="form-group">
              <label for="first_name">First Name:</label>
              <input
                class="first_name form-control"
                type="text"
                placeholder="First name"
                name="first_name"
                required="true"
                value="<%= typeof author !== 'undefined' ? author.first_name : ''
              %>"
              />
              <label for="family_name">Family Name:</label>
              <input
                class="family_name form-control"
                type="text"
                placeholder="Family name"
                name="family_name"
                required="true"
                value="<%= typeof author !== 'undefined' ? author.family_name : ''
              %>"
              />
            </div>
            <div class="form-group">
              <label for="date_of_birth">Date of birth:</label>
              <input
                class="date_of_birth form-control"
                type="date"
                name="date_of_birth"
                value="<%= typeof author !== 'undefined' ? author.date_of_birth : ''
                %>"
              />
              <label for="date_of_death">Date of death:</label>
              <input
                class="date_of_death form-control"
                type="date"
                name="date_of_death"
                value="<%= typeof author !== 'undefined' ? author.date_of_death : ''
                %>"
              />
            </div>
            <button class="btn btn-primary" type="submit">Submit</button>
          </form>
          <% if (typeof errors !== 'undefined') { %> <% for (let i = 0; i <
          errors.length; i++) { %>
          <li><%= errors[i].msg %></li>
          <% } %> <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
